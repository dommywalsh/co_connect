<br>
<div class="container d-flex map-card-container">
  <%# div for search bar and cards%>
    <div class="container mt-4 card-overflow">
      <%= form_with url: spaces_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a coworking space"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
  <br>
      <div class="cards d-grid p-2">
        <%  @spaces.each do |space| %>
          <%= render "spaces/card", space: space %>
        <% end %>
      </div>
    </div>
  <div class="container mt-4">
      <div class = "fixed-element" style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
