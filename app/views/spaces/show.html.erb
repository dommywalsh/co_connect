<div class="container p-5 ">
  <div class="d-flex justify-content-center">
    <div class="card" style="width: 25rem;">
      <% if @space.images.attached? %>
      <%= cl_image_tag @space.images.first.key %>
      <% else %>
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="card-img-top" alt="..."/>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= @space.name %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"> Description: <%= @space.description %></li>
        <li class="list-group-item"> Address: <%= @space.address %></li>
        <li class="list-group-item"> Price: <%=  @space.price %> Euros per day</li>
       <div class="p-2">
      <h3>Book this space</h3>
      <%= simple_form_for [@space, @booking] do |f| %>
        <%= f.input :start_date, as: :date %>
        <%= f.input :end_date, as: :date %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
